{
  "name": "Experiment",
  "description": "üî¨ Experiment is a feature-rich chat interface for Large Language Models (LLMs) like Anthropic, OpenAI, and Mistral.",
  "keywords": [
    "inference",
    "experiment-tracking",
    "llm"
  ],
  "repository": "github:actualwitch/experiment",
